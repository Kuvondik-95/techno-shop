<%- include('includes/header') %>
<link rel="stylesheet" type="text/css" href="/css/users.css" />

<body>
   <div class="home-container">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark ">
        <div class="navbar-div collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item ">
              <a class="nav-link" href="http://localhost:4003/admin/home">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="http://localhost:4003/admin/product/all">Products</a>
            </li>
            <li class="nav-item active">
              <a class="nav-link" href="#">Users</a>
            </li>
            <li 
              class="nav-item nav-item-logout"
              onclick="return confirm('Do you want to logout?')"
              >
              <a 
                class="nav-link btn btn-sm btn-outline-success" 
                href="http://localhost:4003/admin/logout"
                >
                Logout
              </a>
            </li>
          </ul>
        </div>
      </nav>


  
      <div class="container">
        <h2 class="page-title">Users</h2>
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr style="text-align: center">
              <th scope="col" style="width: 10%;">â„–</th>
              <th scope="col" style="width: 50%;">Name</th>
              <th scope="col" style="width: 20%;">Phone</th>
              <th scope="col" style="width: 20%;">Status</th>
            </tr>
          </thead>
          <tbody>
            <% users.map((ele, index) => { %>
            <tr>
              <th scope="row" style="text-align: center"><%=++index%></th>
              <td><%=ele.memberNick%></td>
              <td style="text-align: center"><%=ele.memberPhone%></td>
              <td>
                <select class="form-control" id="<%=ele._id%>">
                  <option 
                    value="ACTIVE"
                    <%=ele.memberStatus === "ACTIVE" ? "selected" : ""%> > 
                    ACTIVE
                  </option>
                  
                  <option 
                    value="BLOCK"
                    <%=ele.memberStatus === "BLOCK" ? "selected" : ""%> >
                      BLOCK
                  </option>
                  
                  <option 
                    value="DELETE"
                    <%=ele.memberStatus === "DELETE" ? "selected" : ""%> >
                    DELETE
                  </option>
                </select>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
      
  </div>

<script type="text/javascript" src="/js/users.js"></script>
</body>

<%- include('includes/footer') %>